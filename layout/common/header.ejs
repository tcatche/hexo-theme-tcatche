<header id="header">
  <div id="header-nav" class="nav-container">
    <ul>
      <% for (var i in theme.menu) {
        if (i == 'Categories') { %>
          <%- list_categories({
            depth: 2,
            style: 'list',
            class: 'main-nav',
            show_count: false,
          }) %>
        <% } else { %>
          <li class="main-nav-list-item" >
            <a class="main-nav-list-link" href="<%- url_for(theme.menu[i]) %>"><%= __('index.' + i.toLowerCase()) %></a>
          </li>
      <% } %><% } %>
    </ul>
  </div>
</header>