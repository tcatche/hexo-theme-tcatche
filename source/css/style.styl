@import "nib"
@import "_variables"
@import "_extend"

global-reset()

input, button
    margin: 0
    padding: 0
    &::-moz-focus-inner
        border: 0
        padding: 0

html, body, #container
    height: 100%

::selection
    color: white
    background: color-sub

::-moz-selection
    color: white
    background: color-sub
    
body
    background: color-background
    font: font-size font-sans
    -webkit-text-size-adjust: 100%
    font-weight: light;

#root
    width: 100vw;
    height: 100vh;
    overflow: scroll;
    position: relative;
    
code
    margin: 0 2px
    color: color-sub
    padding: 3px 5px
    font-size: 0.8em
    border-radius: 2px
    font-family: font-mono
    background-color: #f6f6f6
    border-radius: 3px
    tab-size: 4

.container
    position: relative

.container-inner
    clearfix()
    max-width: container-inner-max-width
    min-width: container-inner-min-width
    width: 100%
    margin: 0 auto

.left, .alignleft
    float: left

.right, .alignright
    float: right

.clear
    clear: both

.hide 
    display: none !important
    
.logo
    display: block
    padding: 10px 0
    width: logo-width
    height: logo-height
    background-image: url(logo-url)
    background-position: 0px 10px
    background-repeat: no-repeat
    background-size: logo-width logo-height

.main-body
    margin-top: block-vertical-margin

.main-body-inner
    clearfix()
    position: relative
    box-sizing: border-box
    max-width: container-inner-max-width
    margin: auto;
    padding: 30px;

#main
    width: 100%
    box-sizing: border-box
    min-height: 600px
    .main-body-header
        background: rgba(255, 255, 255, 1)
        position: relative
        padding: 18px 30px 17px
        color: color-default
        font-size: 16px
        font-weight: 600
        text-transform: uppercase
        margin-bottom: block-vertical-margin
        box-shadow: block-shadow
        line-height: 24px
        .page-title-link, i
            margin-right: 8px
        i
            font-weight: 400
        em, a
            @extend $block-caption
            color: color-default
    .main-body-content
        clearfix()

#page-percent
    position: fixed
    display: none
    top: 0;
    width: 100%;
    z-index: 9999;
    background: #fff
    box-shadow: 0px 1px 3px 1px rgba(0,0,0,.2)
    div 
        background: color-sub
        height: 3px
        width: 0%
        transition: width.5s

.bg_content
    position: fixed
    top: 0
    z-index: -1
    width: 100%
    height: 100%

#canvas
    width: 100%
    height:100%
    opacity: .5


@import "_partial/header"
@import "_partial/nav"
@import "_partial/sidebar"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/assets"
@import "_partial/insight"
@import "_partial/fixed"
@import "_highlight/index"
@import "_retina"
@import "_responsive"


::-webkit-scrollbar
    width: 8px
    height: 8px

::-webkit-scrollbar-track,
::-webkit-scrollbar-thumb
    border-radius: 999px
    border: 2px solid transparent

::-webkit-scrollbar-thumb
    background-clip: content-box
    box-shadow: 0 0 0 5px color-theme inset

::-webkit-scrollbar-corner
    background: transparent

    