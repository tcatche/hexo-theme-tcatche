
.bookmark
  position: relative;
  display: none;
  .bookmark-header
    font-size: 24px;
    margin-bottom: 20px;
    line-height: 32px;
    position: relative;
    .close
      font-size: 32px;
      float: right;
      top: 0;
      position: absolute;
      right: 0;
      cursor: pointer;
      line-height: 32px;
      &:hover 
        color: color-theme
  .bookmark-container
    position: fixed;
    top: 0;
    right: 0;
    height: 100vh;
    width: 400px;
    background: #fff;
    z-index: 100;
    box-shadow: -4px 0 4px 0px rgba(0,0,0,.1);
    padding: 20px;
    overflow-y: auto;
    .mark-list ul
    ul
      counter-reset: section;
      list-style-type: none;
    li
      padding-left: 30px;
      line-height: 1.2em;
      margin: 5px 0;
      &::before
        counter-increment: section;
        content: counters(section, ".");
        color: color-theme
        display: inline-block;
      &.mark-h2::before
        margin-left: -30px;
        width: 15px;
      &.mark-h3::before
        margin-left: -30px;
        width: 25px;
      &.mark-h4::before
        margin-left: -40px;
        width: 40px;
    a
      color: color-theme
      text-decoration: none
      &:hover
        text-decoration: underline

  